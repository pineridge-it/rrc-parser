# RRC Permit Scraper Environment Configuration
# Copy this file to .env.local, .env.staging, or .env.production

# =============================================================================
# Application Settings
# =============================================================================
NODE_ENV=development
PORT=3000
APP_NAME=RRC Permit Scraper
APP_VERSION=2.0.0

# =============================================================================
# Database Configuration (Supabase PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/rrc_permits
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# Redis Configuration (for caching and job queues)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# Authentication (Supabase Auth)
# =============================================================================
JWT_SECRET=your-jwt-secret
AUTH_COOKIE_NAME=sb-auth-token

# =============================================================================
# External APIs
# =============================================================================
RRC_API_BASE_URL=https://mft.rrc.texas.gov
RRC_API_KEY=your-rrc-api-key

# =============================================================================
# Email/Notification Services
# =============================================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@example.com

# =============================================================================
# File Storage (Supabase Storage or S3)
# =============================================================================
STORAGE_PROVIDER=supabase
S3_BUCKET=rrc-permits
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# =============================================================================
# Monitoring and Observability
# =============================================================================
LOG_LEVEL=info
SENTRY_DSN=
POSTHOG_API_KEY=

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_ETL_PIPELINE=true
ENABLE_NOTIFICATIONS=true
ENABLE_EXPORTS=true
ENABLE_API_RATE_LIMITING=true
